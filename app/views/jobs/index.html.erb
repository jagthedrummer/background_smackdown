<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Batch</th>
      <th>Type</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.batch_id %></td>
        <td><%= job.type %></td>
        <td><%= job.started_at %></td>
        <td><%= job.ended_at %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

